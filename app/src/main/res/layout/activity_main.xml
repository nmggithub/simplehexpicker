<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity"
    android:id="@+id/window">

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:id="@+id/hex"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:hint="RRGGBB" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="#"
        android:id="@+id/hash"
        android:layout_alignBaseline="@+id/hex"
        android:layout_alignBottom="@+id/hex"
        android:layout_toLeftOf="@+id/hex"
        android:layout_toStartOf="@+id/hex" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="show"
        android:id="@+id/show"
        android:layout_below="@+id/hex"
        android:layout_centerHorizontal="true"
        android:textColor="@android:color/black" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:id="@+id/invertColorText"
        android:layout_marginTop="10dp"
        android:layout_alignLeft="@+id/hex"
        android:layout_alignStart="@+id/hex"
        android:layout_below="@+id/show" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Complimentary Color"
        android:id="@+id/invertColorLabel"
        android:layout_below="@+id/invertColorText"
        android:layout_alignLeft="@+id/invertColorText"
        android:layout_alignStart="@+id/invertColorText" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="#"
        android:id="@+id/textView"
        android:layout_above="@+id/invertColorLabel"
        android:layout_toLeftOf="@+id/invertColorText"
        android:layout_toStartOf="@+id/invertColorText" />

</RelativeLayout>
